{
  "name": "with-tailwind",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",

    "db:generate": "npm -w packages/db run db:generate",
    "db:migrate:dev": "npm -w packages/db run db:migrate:dev",
    "db:migrate:deploy": "npm -w packages/db run db:migrate:deploy",
    "db:push": "npm -w packages/db run db:push",
    "db:build": "npm -w packages/db run db:build",
    "types:build":"npm -w packages/types run build"
  },
  "devDependencies": {
    "prettier": "^3.6.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.5.6"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.9.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
